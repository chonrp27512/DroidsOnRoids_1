<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/dayNameTextView"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Topic"
        android:id="@+id/dayTopicTextView"
        android:layout_marginLeft="-64dp"
        android:textSize="16sp"
        android:layout_below="@+id/dayNameTextView"
        android:layout_toEndOf="@+id/dayNameTextView"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plan"
        android:id="@+id/dayPlanTextView"
        android:textSize="16sp"
        android:layout_below="@+id/dayTopicTextView"
        android:layout_alignStart="@+id/dayTopicTextView"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="App"
        android:id="@+id/dayAppTextView"
        android:textSize="16sp"
        android:layout_below="@+id/dayPlanTextView"
        android:layout_toRightOf="@+id/dayNameTextView"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>